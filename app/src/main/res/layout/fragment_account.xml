<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fruithat.nutrigenie.MainActivity">

    <Button
            android:text="Reset"
            android:layout_width="62dp"
            android:layout_height="31dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/reset"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="246dp"
            android:layout_marginEnd="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="90dp"/>
    <EditText
            android:layout_width="77dp"
            android:layout_height="39dp"
            android:ems="10"
            android:id="@+id/editText4"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="92dp"
            android:layout_marginStart="37dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.89"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.04000002"/>
    <TextView
            android:text="Result:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/height4"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.358"
            android:layout_marginBottom="250dp"
            android:layout_marginTop="570dp"/>


    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/editText2"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:gravity="center_horizontal"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="92dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.01"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.04000002"/>

    <TextView
            android:text="Age:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:id="@+id/textView5"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="168dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.23000002"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView11"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="395dp"
            android:layout_height="48dp"
            android:text="Nutrient Profile Calculator"
            android:textColor="#25383C"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="100dp"/>

    <EditText
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:ems="10"
            android:id="@+id/editText1"
            android:textColor="#25383C"
            android:inputType="number"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_toEndOf="@+id/weight"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="252dp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/height2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.18"/>

    <TextView
            android:text="Height:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/height2"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="250dp"/>
    <TextView
            android:text="Weight:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="73dp"
            android:textStyle="bold"
            android:layout_height="33dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/weight"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="123dp"
            android:layout_marginTop="180dp"/>

    <EditText
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/editText3"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.29000002"/>

    <TextView
            android:text="Gender:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:id="@+id/textView3"
            android:layout_marginEnd="315dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="450dp"
            android:visibility="visible"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            app:layout_constraintVertical_bias="0.04000002"
    />
    <TextView
            android:text="Daily Calories intake:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginEnd="263dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            android:visibility="visible"
            android:layout_marginStart="90dp"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            app:layout_constraintVertical_bias="0.04000002"
            android:layout_marginTop="100dp"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:id="@+id/calculate"
            style="@style/FirebaseUI.Button.AccountChooser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            android:elevation="0dp"
            android:text="Calculate Daily Calories"
            app:layout_constraintTop_toBottomOf="@+id/save"
            app:layout_constraintVertical_bias="0.61"
            android:layout_marginBottom="400dp"/>
    <Button
            android:text="Save"
            android:layout_width="57dp"
            android:layout_height="31dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/save"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="278dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            android:layout_marginBottom="90dp"/>
    <TextView
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/editText1"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.39"
            android:layout_marginStart="15dp"/>

    <RadioGroup
            android:layout_width="120dp"
            android:layout_height="107dp"
            android:id="@+id/RGroup"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/editText1"
            android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/height2"
            app:layout_constraintEnd_toStartOf="@+id/editText2"
            android:layout_marginEnd="60dp"
            app:layout_constraintVertical_bias="0.06999999"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            app:layout_constraintHorizontal_bias="0.409"
            android:layout_marginTop="5dp">

        <RadioButton
                android:text="Male"
                android:layout_width="73dp"
                android:layout_height="23dp"
                android:id="@+id/Male"
                style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.408"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                android:layout_marginTop="30dp"
                android:duplicateParentState="true"
                android:checked="false"/>
        <RadioButton
                android:text="Female"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/Female"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/Male"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:checked="false"
                android:duplicateParentState="false"
                app:layout_constraintHorizontal_bias="0.4"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/editText4"
                app:layout_constraintVertical_bias="0.53"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>