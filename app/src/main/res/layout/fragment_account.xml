<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fruithat.nutrigenie.MainActivity"
        tools:layout_editor_absoluteY="25dp">

    <Button
            android:text="Reset"
            android:layout_width="62dp"
            android:layout_height="31dp"
            android:id="@+id/reset"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:text="Result:"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/height4"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            android:layout_marginEnd="102dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/calculate"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>

    <EditText
            android:layout_width="353dp"
            android:layout_height="45dp"
            android:ems="10"
            android:id="@+id/editText2"
            android:inputType="number"
            android:visibility="visible"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:hint="Enter age"/>

    <TextView
            android:text="Age"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:id="@+id/textView5"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            app:layout_constraintEnd_toStartOf="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>

    <EditText
            android:layout_width="353dp"
            android:layout_height="44dp"
            android:ems="10"
            android:id="@+id/editText1"
            android:hint="Enter height in cm"
            android:layout_toEndOf="@+id/weight"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/height2"
            app:layout_constraintBottom_toTopOf="@+id/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <TextView
            android:text="Height"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:id="@+id/height2"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="291dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toTopOf="@+id/editText1"
            app:layout_constraintVertical_bias="0.6"/>
    <TextView
            android:text="Weight"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="73dp"
            android:layout_height="33dp"
            android:id="@+id/weight"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="295dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText1"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Enter weight in lbs"
            android:inputType="numberDecimal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            android:layout_marginTop="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <TextView
            android:text="Gender:"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:id="@+id/textView3"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/RGroup"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="110dp"/>
    <TextView
            android:text="Daily Calories intake:"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/height4"
            app:layout_constraintBottom_toTopOf="@+id/save"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:id="@+id/calculate"
            style="@style/FirebaseUI.Button.AccountChooser"
            android:elevation="0dp"
            android:text="Calculate Daily Calories"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/RGroup"
            app:layout_constraintBottom_toTopOf="@+id/height4"
            android:layout_marginEnd="188dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"
            android:layout_width="57dp"
            android:layout_height="31dp"
            android:id="@+id/save"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="82dp"
            app:layout_constraintEnd_toStartOf="@+id/reset"
            android:layout_marginEnd="87dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <RadioGroup
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:id="@+id/RGroup"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="63dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.483">

        <RadioButton
                android:text="Male"
                android:layout_width="73dp"
                android:layout_height="23dp"
                android:id="@+id/Male"
                style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.408"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                android:layout_marginTop="30dp"
                android:duplicateParentState="true"
                android:checked="false"/>
        <RadioButton
                android:text="Female"
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:id="@+id/Female"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/Male"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:checked="false"
                android:duplicateParentState="false"
                app:layout_constraintHorizontal_bias="0.4"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/editText4"
                app:layout_constraintVertical_bias="0.53"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"/>
    </RadioGroup>
    <TextView
            android:layout_width="82dp"
            android:layout_height="29dp"
            android:id="@+id/textView12"
            android:textSize="15dp"
            android:textColor="#25383C"
            android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="147dp"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/calculate"/>

</android.support.constraint.ConstraintLayout>