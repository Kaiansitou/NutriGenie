<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fruithat.nutrigenie.MainActivity" tools:layout_editor_absoluteY="25dp">

    <Button
            android:text="Reset"
            android:layout_width="62dp"
            android:layout_height="31dp"
            android:id="@+id/reset"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Result:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="34dp"
            android:id="@+id/height4"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginEnd="267dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"/>


    <EditText
            android:layout_width="83dp"
            android:layout_height="44dp"
            android:ems="10"
            android:id="@+id/editText2"
            android:inputType="number"
            android:visibility="visible"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" android:layout_marginBottom="163dp"
            app:layout_constraintBottom_toTopOf="@+id/textView12" android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Age:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:id="@+id/textView5"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="144dp" app:layout_constraintEnd_toStartOf="@+id/editText2"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/RGroup"/>

    <EditText
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:ems="10"
            android:id="@+id/editText1"
            android:textColor="#25383C"
            android:gravity="center_horizontal"
            android:layout_toEndOf="@+id/weight"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp" app:layout_constraintEnd_toStartOf="@+id/textView10"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/weight"/>

    <TextView
            android:text="Height:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="34dp"
            android:id="@+id/height2"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp" app:layout_constraintEnd_toStartOf="@+id/editText1"
            android:layout_marginEnd="3dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/weight"/>
    <TextView
            android:text="Weight:"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="73dp"
            android:textStyle="bold"
            android:layout_height="33dp"
            android:id="@+id/weight"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintEnd_toStartOf="@+id/editText3"/>

    <EditText
            android:layout_width="71dp"
            android:layout_height="39dp"
            android:ems="10"
            android:id="@+id/editText3"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintStart_toEndOf="@+id/weight"/>

    <TextView
            android:text="Gender:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:id="@+id/textView3"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/weight" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toStartOf="@+id/editText3"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Daily Calories intake:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" app:layout_constraintEnd_toStartOf="@+id/textView12"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/height4"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:id="@+id/calculate"
            style="@style/FirebaseUI.Button.AccountChooser"
            android:elevation="0dp"
            android:text="Calculate Daily Calories"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            android:layout_marginEnd="150dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"
            android:layout_width="57dp"
            android:layout_height="31dp"
            android:id="@+id/save"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/calculate" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toStartOf="@+id/reset"
            android:layout_marginEnd="90dp"/>
    <TextView
            android:text="lbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginEnd="172dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/editText3"
            app:layout_constraintBottom_toTopOf="@+id/RGroup" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
    />

    <TextView
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="153dp" app:layout_constraintEnd_toStartOf="@+id/textView5"
            android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"/>
    <RadioGroup
            android:layout_width="127dp"
            android:layout_height="114dp"
            android:id="@+id/RGroup"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginEnd="138dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/weight" app:layout_constraintHorizontal_bias="1.0">

        <RadioButton
                android:text="Male"
                android:layout_width="73dp"
                android:layout_height="23dp"
                android:id="@+id/Male"
                style="@android:style/Widget.Holo.Light.CompoundButton.RadioButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.408"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                android:layout_marginTop="30dp"
                android:duplicateParentState="true"
                android:checked="false"/>
        <RadioButton
                android:text="Female"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/Female"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/Male"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:checked="false"
                android:duplicateParentState="false"
                app:layout_constraintHorizontal_bias="0.4"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/editText4"
                app:layout_constraintVertical_bias="0.53"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"/>
    </RadioGroup>
    <TextView
            android:layout_width="115dp"
            android:layout_height="29dp"
            android:id="@+id/textView12"
            android:textSize="20dp"
            android:textColor="#25383C"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="159dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>

</android.support.constraint.ConstraintLayout>